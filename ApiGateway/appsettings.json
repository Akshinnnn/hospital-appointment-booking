{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "userservice-auth": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "userservice-schedule": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/schedule/{**catch-all}"
        }
      },
      "userservice-schedule-doctor": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/{doctorId}/schedule"
        }
      },
      "userservice-account": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/account/{**catch-all}"
        }
      },
      "appointmentservice": {
        "ClusterId": "appointmentservice",
        "Match": {
          "Path": "/api/appointment/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userservice": {
        "Destinations": {
          "user": {
            "Address": "http://userservice:8080/"
          }
        }
      },
      "appointmentservice": {
        "Destinations": {
          "appointment": {
            "Address": "http://appointmentservice:8080/"
          }
        }
      }
    }
  }
}
